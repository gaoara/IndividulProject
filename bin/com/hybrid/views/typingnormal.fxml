<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hybrid.controllers.TypingNormalController">
   <top>
      <HBox style="-fx-alignment: center;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Heart:" textAlignment="CENTER" />
            <Label fx:id="lblheart1" text="*" textAlignment="CENTER" textFill="#254dd0">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <Label fx:id="lblheart2" text="*" textAlignment="CENTER" textFill="#254dd0">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <Label fx:id="lblheart3" text="*" textAlignment="CENTER" textFill="#254dd0">
               <font>
                  <Font size="22.0" />
               </font>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
            <Button id="btnStart" fx:id="btnStart" mnemonicParsing="false" prefWidth="50.0" text="Start">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button id="btnStop" fx:id="btnStop" mnemonicParsing="false" text="Stop" />
            <Button id="btnMain" fx:id="btnMain" mnemonicParsing="false" prefWidth="50.0" text="Main">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Label fx:id="lblScore" text="0" textAlignment="RIGHT" textFill="#10439a">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
   </top>
   <bottom>
      <TextField fx:id="txtField" maxWidth="200.0" promptText="Typing Here." BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <AnchorPane fx:id="anchorPane" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
